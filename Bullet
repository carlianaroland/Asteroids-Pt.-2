package Astr_pack;
import java.awt.Rectangle;

public class Bullet extends VectorShape { // extending once more, Bullet's superclass is VectorShape

	public Bullet() {
		setShape(new Rectangle(0,0,1,1)); // bounds for the new rectangle
		setAlive(false);
	}
	
	public Rectangle getBounds() {
		return new Rectangle((int)getX(), (int)getY(),1,1); // setting the rectangle
	}

}
